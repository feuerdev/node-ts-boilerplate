{
	"env": {
		"browser": true,
		"es2021": true,
    "jest": true,
    "node": true
	},
  "ignorePatterns": [
    "node_modules",
    "build"
  ],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	]
}