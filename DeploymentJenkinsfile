pipeline {
  agent any
  parameters {
    choice(name: 'ENVIRONMENT', choices: ['staging', 'production'], description: 'Choose the target environment')
  }
  tools {
    nodejs "node16"
  }
  environment {
    GH_TOKEN = credentials("gh-pat")
  }
  stages {
    stage("Info") {
      steps {
        echo "Environment: ${params.ENVIRONMENT}"
        // sh "printenv"
        // sh 'ssh jannik@feuer.dev bash -c "'
        sh 'mkdir changeme || true'
        sh 'cd changeme'
        sh 'mkdir staging production || true'
        sh 'cd ${params.ENVIRONMENT}'
        sh 'docker compose down || true'
        sh 'cd ..'
        sh 'rm -rf ${params.ENVIRONMENT}'
        sh 'git clone -b ${env.BRANCH_NAME} --single-branch ${GIT_URL} ${params.ENVIRONMENT}'
        sh 'cd ${params.ENVIRONMENT}'
        sh 'docker compose up'
        // '"'
        //ssh to vserver (SSH key, Jenkins user)
        //navigate to project directory
        //sh "mkdir staging production || true"
        //sh "cd ${params.ENVIRONMENT}"
        //sh "docker compose down"
        //sh "cd .."
        //sh "rm -rf ${params.ENVIRONMENT}"
        //sh "git clone -b ${env.BRANCH_NAME} --single-branch ${GIT_URL} ${params.ENVIRONMENT}"
        //sh "cd ${params.ENVIRONMENT}"
        //sh "docker compose up"
      }
    }
  }
}